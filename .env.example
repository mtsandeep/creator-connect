# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Get these from your Firebase Console -> Project Settings
# Create a new project at https://console.firebase.google.com/

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Emulator (set to 'true' to use local emulators, 'false' for production)
VITE_USE_EMULATOR=true

# Razorpay (public)
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here

# Razorpay (backend functions)
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here
