// ============================================
// FIRESTORE SECURITY RULES
// ============================================
// Copy these to Firebase Console -> Firestore -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // GLOBAL HELPER FUNCTIONS
    // ============================================

    // Check if user is currently impersonating (read-only mode)
    function isImpersonating() {
      return request.auth != null
        && exists(/databases/$(database)/documents/impersonation/$(request.auth.uid));
    }

    // Check if requester is admin
    function isAdmin() {
      return request.auth != null
        && (
          request.auth.token.admin == true
          || (
            exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin'])
          )
        );
    }

    // Check if conversation is between the same user (self-messaging)
    function isSelfMessaging(userId) {
      return request.resource.data.participants.size() == 1
        && request.resource.data.participants[0] == userId;
    }

    // ============================================
    // IMPERSONATION COLLECTION (Admin only)
    // ============================================
    match /impersonation/{adminId} {
      // Only admins can create their own impersonation marker
      allow create: if request.auth != null
        && request.auth.uid == adminId
        && isAdmin();

      // Only the admin can delete their own impersonation marker
      allow delete: if request.auth != null
        && request.auth.uid == adminId;

      // Allow read for checking impersonation status
      allow read: if request.auth != null;
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // EXCEPTION: Promoters can read influencer profiles for browsing
      allow read: if request.auth != null && (
        // Users can read their own profile
        request.auth.uid == userId
        
        // Promoters can read influencer profiles (must be verified)
        || ('promoter' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles
            && 'influencer' in resource.data.roles)

        // Influencers can read promoter profiles (needed for messaging)
        || ('influencer' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles
            && 'promoter' in resource.data.roles)
            
        // Admins can read any profile
        || isAdmin()
      );

      // Users can write their own profile (except roles - that's managed by signup)
      // BLOCK writes if user is impersonating (read-only mode)
      // EXCEPTION: Allow promoter signup (creating profile with roles)
      allow write: if request.auth != null
        && request.auth.uid == userId
        && !isImpersonating()
        && (
          // Allow promoter signup (creating new profile with roles)
          (resource == null && ('promoter' in request.resource.data.roles || 'influencer' in request.resource.data.roles))
          
          // OR allow normal profile updates (except restricted fields)
          || (resource != null && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['roles', 'isBanned', 'avgRating', 'totalReviews', 'verificationBadges', 'verifiedAt', 'createdAt', 'email']))
        );

      // Admins can update any user (for ban/unban/trusted operations)
      // BLOCK if admin is impersonating
      allow update: if isAdmin() && !isImpersonating()
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['roles', 'createdAt', 'email']);

      // Backend functions can update verification fields after payment
      // This allows payment verification functions to set verification status
      allow write: if request.auth != null
        && request.auth.token.admin == true
        && (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['verificationBadges', 'verifiedAt'])
          || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['verificationBadges'])
          || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['verifiedAt'])
        );
    }

    // ============================================
    // VERIFICATION TASKS COLLECTION
    // ============================================
    match /verificationTasks/{taskId} {
      // Anyone can read active verification tasks
      allow read: if request.auth != null;
      
      // Only admins can create verification tasks
      allow create: if isAdmin() && !isImpersonating();
      
      // Only admins can update verification tasks
      allow update: if isAdmin() && !isImpersonating();
      
      // Only admins can delete verification tasks
      allow delete: if isAdmin() && !isImpersonating();
    }

    // ============================================
    // DASHBOARD MESSAGES COLLECTION
    // ============================================
    match /dashboardMessages/{messageId} {
      // Authenticated users can read dashboard messages
      allow read: if request.auth != null;

      // Only admins can create/update/delete dashboard messages
      allow create, update, delete: if isAdmin() && !isImpersonating();
    }

    // ============================================
    // TASK SUBMISSIONS COLLECTION
    // ============================================
    match /taskSubmissions/{submissionId} {
      // Admins can read all submissions
      allow read: if isAdmin();
      
      // Influencers can read their own submissions
      allow read: if request.auth != null
        && resource.data.influencerId == request.auth.uid;
      
      // Admins can create submissions
      // Influencers can create their own submissions when starting a task
      allow create: if !isImpersonating()
        && (
          isAdmin()
          || (
            request.auth != null
            && request.resource.data.influencerId == request.auth.uid
            && request.resource.data.status == 'in_progress'
            && request.resource.data.startedAt is number
            && request.resource.data.taskId is string
            && request.resource.data.completedDeliverables is list
            && request.resource.data.attachments is list
            && request.resource.data.keys().hasOnly([
              'taskId',
              'influencerId',
              'status',
              'startedAt',
              'completedDeliverables',
              'attachments'
            ])
          )
        );
      
      // Admins can update submissions (approval/rejection)
      // Influencers can update their own submissions to submit/resubmit work
      allow update: if !isImpersonating()
        && (
          (isAdmin())
          || (
            request.auth != null
            && resource.data.influencerId == request.auth.uid
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
              'status',
              'submittedAt',
              'completedDeliverables',
              'submissionNotes',
              'attachments'
            ])
            && (resource.data.status in ['in_progress', 'rejected'])
            && request.resource.data.status == 'submitted'
            && request.resource.data.submittedAt is number
          )
        );
      
      // Only admins can delete submissions
      allow delete: if isAdmin() && !isImpersonating();
    }

    // ============================================
    // USER DISMISSED DASHBOARD MESSAGES (Subcollection)
    // ============================================
    match /users/{userId}/dismissedDashboardMessages/{dismissalId} {
      // Users can read their own dismissal records
      allow read: if request.auth != null
        && request.auth.uid == userId;

      // Users can create their own dismissal records
      // BLOCK writes if impersonating
      allow create: if request.auth != null
        && request.auth.uid == userId
        && !isImpersonating();

      // No updates/deletes needed
      allow update, delete: if false;
    }

    // ============================================
    // PROMOTERS SUBCOLLECTION (for saved influencers, etc.)
    // ============================================
    match /promoters/{promoterId} {
      // Only the promoter can access their own data
      allow read: if request.auth != null && request.auth.uid == promoterId;
      // BLOCK writes if impersonating
      allow write: if request.auth != null && request.auth.uid == promoterId && !isImpersonating();

      // Saved influencers subcollection
      match /saved/influencers {
        allow read: if request.auth != null && request.auth.uid == promoterId;
        // BLOCK writes if impersonating
        allow write: if request.auth != null && request.auth.uid == promoterId && !isImpersonating();
      }

      // ============================================
      // PROPOSAL MESSAGES SUBCOLLECTION
      // ============================================
      match /proposals/{proposalId}/messages/{messageId} {
        allow read: if request.auth != null
          && (get(/databases/$(database)/documents/proposals/$(proposalId)).data.influencerId == request.auth.uid
            || get(/databases/$(database)/documents/proposals/$(proposalId)).data.promoterId == request.auth.uid
            || isAdmin());

        allow create: if request.auth != null
          && !isImpersonating()
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.senderId != request.resource.data.receiverId;

        allow update: if request.auth != null
          && !isImpersonating()
          && (
            request.auth.uid == resource.data.senderId
            || (request.auth.uid == resource.data.receiverId
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']))
          );

        allow delete: if false;
      }
    }

    // ============================================
    // PROPOSALS COLLECTION
    // ============================================
    match /proposals/{proposalId} {
      // DISABLE LIST OPERATIONS - Prevent bulk data harvesting
      allow list: if request.auth != null;

      // Only involved parties can read individual proposal documents
      allow get: if request.auth != null
        && (resource.data.influencerId == request.auth.uid
          || resource.data.promoterId == request.auth.uid
          || isAdmin());

      // Combined read permission
      allow read: if request.auth != null
        && (resource.data.influencerId == request.auth.uid
          || resource.data.promoterId == request.auth.uid
          || isAdmin());

      // Promoters can create proposals - BLOCK if impersonating
      allow create: if request.auth != null
        && request.resource.data.promoterId == request.auth.uid
        && !isImpersonating()
        && request.resource.data.title is string
        && request.resource.data.title.size() >= 5
        && request.resource.data.title.size() <= 100
        && (!('proposedBudget' in request.resource.data)
          || (request.resource.data.proposedBudget is number
            && request.resource.data.proposedBudget > 0));

      // Only involved parties can update - BLOCK if impersonating
      allow update: if request.auth != null
        && (resource.data.influencerId == request.auth.uid
          || resource.data.promoterId == request.auth.uid
          || isAdmin())
        && !isImpersonating()
        && (
          // Status updates
          (resource.data.proposalStatus in ['created', 'discussing', 'finalized', 'in_progress', 'completed', 'cancelled']
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['proposalStatus', 'updatedAt']))

          // Influencer can accept proposal (status + clear decline reason)
          || (resource.data.influencerId == request.auth.uid
          && request.resource.data.proposalStatus == 'discussing'
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['proposalStatus', 'declineReason', 'updatedAt']))

          // Influencer can decline proposal (status + reason)
          || (resource.data.influencerId == request.auth.uid
          && request.resource.data.proposalStatus == 'cancelled'
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['proposalStatus', 'declineReason', 'updatedAt']))

          || (resource.data.influencerId == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['influencerAcceptedTerms', 'updatedAt']))

          || (resource.data.promoterId == request.auth.uid
          && request.resource.data.proposalStatus == 'agreed'
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'proposalStatus', 'paymentStatus', 'workStatus',
            'finalAmount', 'advanceAmount', 'remainingAmount',
            'paymentSchedule', 'updatedAt'
          ]))

          // Promoter can resubmit edited proposal for review
          || (resource.data.promoterId == request.auth.uid
          && request.resource.data.proposalStatus == 'changes_requested'
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'proposalStatus', 'updatedAt',
            'title', 'description', 'requirements', 'deliverables',
            'proposedBudget', 'deadline', 'paymentMode',
            'declineReason'
          ]))
          
          // Influencer approval/submission
          || (resource.data.influencerId == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['influencerApproval']))

          || (resource.data.influencerId == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'completionPercentage', 'completedDeliverables', 'workUpdateLog',
            'workStatus', 'influencerSubmittedWork',
            'revisionReason', 'revisionRequestedAt', 'revisionRequestedBy',
            'updatedAt'
          ]))

          || (resource.data.influencerId == request.auth.uid
          && request.resource.data.workStatus == 'disputed'
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'workStatus', 'disputeReason', 'disputeRaisedAt', 'disputeRaisedBy', 'updatedAt'
          ]))

          // Attachment updates (proposal participants)
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attachments', 'updatedAt']))
          
          // Promoter payment status and schedule
          || (resource.data.promoterId == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'paymentStatus', 'paymentSchedule', 'workStatus',
            'finalAmount', 'advanceAmount', 'remainingAmount',
            'completionPercentage', 'updatedAt'
          ]))

          || (resource.data.promoterId == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'workStatus', 'brandApprovedWork', 'completionPercentage', 'updatedAt'
          ]))

          || (resource.data.promoterId == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'workStatus', 'influencerSubmittedWork', 'brandApprovedWork',
            'revisionReason', 'revisionRequestedAt', 'revisionRequestedBy',
            'updatedAt'
          ]))
        );

      // No deletion of proposals
      allow delete: if false;

      // ============================================
      // PROPOSAL MESSAGES SUBCOLLECTION
      // ============================================
      match /messages/{messageId} {
        allow read: if request.auth != null
          && (get(/databases/$(database)/documents/proposals/$(proposalId)).data.influencerId == request.auth.uid
            || get(/databases/$(database)/documents/proposals/$(proposalId)).data.promoterId == request.auth.uid
            || isAdmin());

        allow create: if request.auth != null
          && !isImpersonating()
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.senderId != request.resource.data.receiverId;

        allow update: if request.auth != null
          && !isImpersonating()
          && (
            request.auth.uid == resource.data.senderId
            || (request.auth.uid == resource.data.receiverId
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']))
          );

        allow delete: if false;
      }

      // ============================================
      // PROPOSAL HISTORY SUBCOLLECTION
      // ============================================
      match /history/{historyId} {
        // Only involved parties can read history
        allow read: if request.auth != null
          && (get(/databases/$(database)/documents/proposals/$(proposalId)).data.influencerId == request.auth.uid
            || get(/databases/$(database)/documents/proposals/$(proposalId)).data.promoterId == request.auth.uid);

        // Only involved parties can create history entries when updating proposal
        // BLOCK if impersonating
        allow create: if request.auth != null
          && (get(/databases/$(database)/documents/proposals/$(proposalId)).data.influencerId == request.auth.uid
            || get(/databases/$(database)/documents/proposals/$(proposalId)).data.promoterId == request.auth.uid)
          && !isImpersonating();

        // No updates or deletions of history entries
        allow update, delete: if false;
      }

      // ============================================
      // PROPOSAL INVOICES SUBCOLLECTION
      // ============================================
      match /invoices/{invoiceType} {
        // Only involved parties can read invoices
        allow read: if request.auth != null
          && (get(/databases/$(database)/documents/proposals/$(proposalId)).data.influencerId == request.auth.uid
            || get(/databases/$(database)/documents/proposals/$(proposalId)).data.promoterId == request.auth.uid
            || isAdmin());

        // Promoter can create invoices for their own proposal (advance/final)
        // BLOCK if impersonating
        allow create: if request.auth != null
          && !isImpersonating()
          && (invoiceType in ['advance', 'final'])
          && get(/databases/$(database)/documents/proposals/$(proposalId)).data.promoterId == request.auth.uid
          && request.resource.data.proposalId == proposalId
          && request.resource.data.promoterId == request.auth.uid
          && request.resource.data.influencerId == get(/databases/$(database)/documents/proposals/$(proposalId)).data.influencerId
          && request.resource.data.type == invoiceType
          && request.resource.data.invoiceNumber is string
          && request.resource.data.amount is number
          && request.resource.data.amount > 0
          && request.resource.data.currency is string
          && request.resource.data.paidAt is number;

        // No updates or deletions of invoices
        allow update, delete: if false;
      }
    }

    // ============================================
    // CONVERSATIONS COLLECTION
    // ============================================
    match /conversations/{conversationId} {
      // Only participants can read/list conversations - BLOCK if impersonating
      allow get, list, read: if request.auth != null
        && resource.data.participants.hasAny([request.auth.uid])
        && !isImpersonating();

      // Allow authenticated users to create conversations - BLOCK if impersonating
      allow create: if request.auth != null
        && !isImpersonating();

      // Participants can update conversations (e.g., leave conversation) - BLOCK if impersonating
      allow update: if request.auth != null
        && resource.data.participants.hasAny([request.auth.uid])
        && !isImpersonating();

      // Participants can leave conversations - BLOCK if impersonating
      allow delete: if request.auth != null
        && resource.data.participants.hasAny([request.auth.uid])
        && resource.data.participants.size() == 1
        && resource.data.participants.hasOnly([request.auth.uid])
        && !isImpersonating();

      // ============================================
      // DIRECT MESSAGES SUBCOLLECTION
      // ============================================
      match /messages/{messageId} {
        allow read: if request.auth != null
          && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);

        allow create: if request.auth != null
          && !isImpersonating()
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.senderId != request.resource.data.receiverId;

        allow update: if request.auth != null
          && !isImpersonating()
          && (
            request.auth.uid == resource.data.senderId
            || (request.auth.uid == resource.data.receiverId
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']))
          );

        allow delete: if false;
      }
    }

    // ============================================
    // MESSAGES COLLECTION
    // ============================================
    match /messages/{messageId} {
      allow read: if false;
      allow write: if false;
    }

    // ============================================
    // REVIEWS COLLECTION
    // ============================================
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;

      // Only reviewer can create their own review - BLOCK if impersonating
      allow create: if request.auth != null
        && request.resource.data.reviewerId == request.auth.uid
        && !isImpersonating();

      // Only reviewer can update their own review - BLOCK if impersonating
      allow update: if request.auth != null
        && resource.data.reviewerId == request.auth.uid
        && (request.time - resource.data.createdAt) < 86400000
        && !isImpersonating();

      // No deletion of reviews
      allow delete: if false;
    }

    // ============================================
    // TRANSACTIONS COLLECTION
    // ============================================
    match /transactions/{transactionId} {
      // Only payer and receiver can read
      allow read: if request.auth != null
        && (resource.data.payerId == request.auth.uid
          || resource.data.receiverId == request.auth.uid);

      // Only Firebase Functions can write (payment processing)
      allow write: if false;
    }

    // ============================================
    // ADMIN LOGS COLLECTION
    // ============================================
    match /adminLogs/{logId} {
      // Only admins can read admin logs
      allow read: if request.auth != null && isAdmin();

      // Only admins can create log entries (even when impersonating, for audit trail)
      allow create: if request.auth != null && isAdmin();
    }

    // ============================================
    // RATE LIMITS COLLECTION (for API rate limiting)
    // ============================================
    match /rateLimits/{limitId} {
      // Users can read their own rate limits
      allow read: if request.auth != null && limitId.matches(request.auth.uid + '.*');

      // Only Firebase Functions can write
      allow write: if false;
    }

    // ============================================
    // API CACHE COLLECTION (for caching Apify results)
    // ============================================
    match /apiCache/{cacheKey} {
      // Anyone can read from cache
      allow read: if true;

      // Only Firebase Functions can write
      allow write: if false;
    }

    // ============================================
    // INDEXES QUERY HELPERS
    // ============================================
    // These are hints for composite indexes
    // Create these in Firebase Console -> Firestore -> Indexes

    // influencerId_status index for influencer proposals
    // promoterId_status index for promoter proposals
    // proposalId_timestamp index for messages
    // revieweeId_rating index for reviews
  }
}
